5  .  .  7  .  .  8  .  .  .  .  3  3  .  9
5  .  7  7  .  .  8  8  .  10 .  3  3  .  .
5  .  7  .  .  .  8  8  8  .  11 .  3  3  .
5  .  .  .  8  8  8  8  8  .  11 11 .  .  12
5  5  .  13 .  .  .  8  .  .  .  11 11 .  12
.  .  .  13 .  14 .  8  .  15 .  11 11 11 .
.  .  .  13 13 .  .  .  .  .  11 11 .  11 .
.  .  13 13 13 13 13 13 13 .  .  11 11 11 .
.  .  .  13 13 13 .  .  .  .  .  .  11 .  .
16 16 .  .  .  .  17 17 .  18 .  .  .  19 .
.  .  .  17 .  17 17 .  18 18 .  20 .  19 19
.  .  17 17 17 17 .  18 18 18 .  20 20 .  19
ğ˜± = 0.5, ğ˜• = 15, ğ˜’ = 0.088889
ğ˜± = 0.5, trials = 5, ğ˜• = 10, ğ˜’ = 0.104
ğ˜± = 0.5, trials = 5, ğ˜• = 30, ğ˜’ = 0.073111
ğ˜± = 0.5, trials = 5, ğ˜• = 100, ğ˜’ = 0.07036
END

use Test;
is @res.join('').subst(/<ws>/, '', :g), $ref.subst(/<ws>/, '', :g);
