my @res;

srand 123456;

sub pso-init (%y) {
    my $d = @(%y{'min'});
    my $n = %y{'n'};

    %y{'gbval'} = Inf; 
    %y{'gbpos'} = [Inf xx $d];
    %y{'bval'}  = [Inf xx $n];
    %y{'bpos'}  = [%y{'min'} xx $n];
    %y{'pos'}   = [%y{'min'} xx $n];
    %y{'vel'}   = [[0 xx $d] xx $n];

    %y
}

sub pso (&fn, %y) {
    my %p      = %y{'p'};
    my $n      = %y{'n'};
    my $d      = @(%y{'min'});
    my @bpos   = %y{'min'} xx $n;
    my $gbval  = Inf; 
    my $rand-g = rand;
    my (@pos, @vel, @v, @gbpos, @bval);

    for 0 ..^ $n -> \j {
        @v[j] = &fn(%y{'pos'}[j]); # evaluate

        # update
        if @v[j] < %y{'bval'}[j] {
            @bpos[j] = %y{'pos'}[j];
            @bval[j] = @v[j];
        } else {
            @bpos[j] = %y{'bpos'}[j];
            @bval[j] = %y{'bval'}[j];
        }
        if @bval[j] < $gbval {
            @gbpos = |@bpos[j];
            $gbval = @bval[j];
        }
    }

    # migrate
    for 0 ..^ $n -> \j {
        my $rand-p = rand;
        my $ok = True;
        for 0 ..^ $d -> \k {
            @vel[j;k] = %p{'Ï‰'}              Ã— %y{'vel'}[j;k] 
                       + %p{'Ï†-p'} Ã— $rand-p Ã— (@bpos[j;k] - %y{'pos'}[j;k]) 
                       + %p{'Ï†-g'} Ã— $rand-g Ã— (@gbpos[k]  - %y{'pos'}[j;k]);
            @pos[j;k] = %y{'pos'}[j;k] + @vel[j;k];
            $ok = %y{'min'}[k] < @pos[j;k] < %y{'max'}[k] if $ok;
        }
        next if $ok;
        @pos[j;$_] = %y{'min'}[$_] + (%y{'max'}[$_] - %y{'min'}[$_]) Ã— rand for 0 ..^ $d;
    }
    return {gbpos => @gbpos, gbval => $gbval, bpos => @bpos, bval => @bval, pos => @pos, vel => @vel, 
            min => %y{'min'}, max => %y{'max'}, p=> %y{'p'}, n => $n};
}

sub report ($function-name, %state) {
  @res.push: $function-name;
  @res.push: 'ğŸŒ  best position: ' ~ %state{'gbpos'}.fmt('%.5f'); 
  @res.push: 'ğŸŒ  best value:    ' ~ %state{'gbval'}.fmt('%.5f');
  @res.push: '';
}

# McCormick
sub mccormick (@x) {
    my ($a,$b) = @x;
    sin($a+$b) + ($a-$b)**2 + (1 + 2.5Ã—$b - 1.5Ã—$a)
}

my %state = pso-init( {
    min => [-1.5, -3], 
    max => [4, 4], 
    n   => 100,
    p   => {Ï‰ => 0, Ï†-p => 0.6, Ï†-g => 0.3},
} );
%state = pso(&mccormick, %state) for 1 .. 40;
report 'McCormick', %state;

# Michalewicz 
sub michalewicz (@x) {
    my $sum;
    my $m = 10;
    for 1..@x -> $i {
        my $j = @x[$i - 1];
        my $k = sin($i Ã— $j**2/Ï€);
        $sum += sin($j) Ã— $k**(2Ã—$m)
    }
    -$sum
}

%state = pso-init( {
    min => [0, 0], 
    max => [Ï€, Ï€], 
    n   => 1000,
    p   => {Ï‰ => 0.3, Ï†-p => 0.3, Ï†-g => 0.3},
} );
%state = pso(&michalewicz, %state) for 1 .. 30;
report 'Michalewicz', %state;

