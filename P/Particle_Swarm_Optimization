my %state = pso-init( {
    min => [-1.5, -3], 
    max => [4, 4], 
    n=> 10,
    parameters => {Ï‰=> 0, Ï†-p=> 0.6, Ï†-g=> 0.3},
} );

#%state = pso(&mccormick, %state);
report(%state);
%state = iterate( &mccormick, 40, %state);
report(%state);
exit;

