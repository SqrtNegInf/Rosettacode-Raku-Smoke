#!/usr/bin/env perl6
#c# 2020-01-14 >RC
#m# MOAR: OK
#j# JVM:  OK
#n# ğŸŒ didn't work well in variable names :-(

my @res;

srand 123456;

sub pso-init (%y) {
    my $d = %y{'min'}.elems;
    my $n = %y{'n'};

    %y{'iter'}  = 0; 
    %y{'gbval'} = Inf; 
    %y{'gbpos'} = [Inf xx $d];
    %y{'bval'}  = [Inf xx $n];
    %y{'bpos'}  = [%y{'min'} xx $n];
    %y{'pos'}   = [%y{'min'} xx $n];
    %y{'vel'}   = [[(0) xx $d] xx $n];
    %y{'d'}     = $d;

    return %y;
}

sub pso (&fn, %y) {
    my %p     = %y{'p'};
    my $n     = %y{'n'};
    my $d     = %y{'min'}.elems;
    my @v     = 0 xx $n;
    my @gbpos = 0 xx $d;
    my @bval  = 0 xx $n;
    my @bpos  = %y{'min'} xx $n;
    my $gbval = Inf; 
    for 0 ..^ $n -> \j {
        # evaluate
        @v[j] = &fn(%y{'pos'}[j]);
        # update
        if @v[j] < %y{'bval'}[j] {
            @bpos[j] = %y{'pos'}[j];
            @bval[j] = @v[j];
        } else {
            @bpos[j] = %y{'bpos'}[j];
            @bval[j] = %y{'bval'}[j];
        }
        if @bval[j] < $gbval {
            $gbval = @bval[j];
            @gbpos = |@bpos[j];
        }
    }
    my $rg  = rand;
    my @pos = [(0) xx $d] xx $n;
    my @vel = [(0) xx $d] xx $n;
    my $iter;

    for 0 ..^ $n -> \j {
        # migrate
        my $rp = rand;
        my $ok = True;
        @vel[j] = [(0) xx @vel[j].elems];
        @pos[j] = [(0) xx @pos[j].elems];
        for 0 ..^ $d -> \k {
            @vel[j][k] = %p{'Ï‰'} * %y{'vel'}[j][k] 
                      + %p{'Ï†-p'} * $rp * (@bpos[j][k] - %y{'pos'}[j][k]) 
                      + %p{'Ï†-g'} * $rg * (@gbpos[k]   - %y{'pos'}[j][k]);
            @pos[j][k] = %y{'pos'}[j][k] + @vel[j][k];
            $ok = %y{'min'}[k] < @pos[j][k] < %y{'max'}[k] if $ok;
        }
        if not $ok {
            for 0 ..^ $d -> \k {
                @pos[j][k] = %y{'min'}[k] + (%y{'max'}[k] - %y{'min'}[k]) * rand;
            }
        }
    }
    $iter = 1 + %y{'iter'};
    {iter => $iter, gbpos => @gbpos, gbval => $gbval, min => %y{'min'}, max => %y{'max'}, p=> %y{'p'}, 
        pos => @pos, vel => @vel, bpos => @bpos, bval => @bval, n => $n, d => $d};
}

sub report (%state) {
  @res.push: 'ğŸŒ  best position: ' ~ sprintf "%.5f, %.5f", |%state{'gbpos'};
  @res.push: 'ğŸŒ  best value:    ' ~ sprintf "%.5f",        %state{'gbval'};
  @res.push: '';
}

sub mccormick (@x) {
  my ($a,$b) = @x;
  return sin($a+$b) + ($a-$b)**2 + (1 + 2.5*$b - 1.5*$a)
}

sub michalewicz (@x) {
    my $m = 10;
    my $sum;
    for 1..@x -> $i {
        my $j = @x[$i - 1];
        my $k = sin($i * $j**2 / Ï€);
        $sum += sin($j) * $k ** (2 * $m)
    }
    return -1 * $sum
}

# McCormick
my %state = pso-init( {
    min => [-1.5, -3], 
    max => [4, 4], 
    n   => 100,
    p   => {Ï‰=> 0, Ï†-p=> 0.6, Ï†-g=> 0.3},
} );
%state = pso(&mccormick, %state) for 1 .. 40;
report %state;

# Michalewicz 
%state = pso-init( {
    min => [0, 0], 
    max => [Ï€, Ï€], 
    n   => 1000,
    p   => {Ï‰=> 0.3, Ï†-p=> 0.3, Ï†-g=> 0.3},
} );
%state = pso(&michalewicz, %state) for 1 .. 30;
report %state;

.say for @res;

my $ref = q:to/END/;
ğŸŒ  best position: -0.54714, -1.54710
ğŸŒ  best value:    -1.91322

ğŸŒ  best position: 2.20291, 1.57080
ğŸŒ  best value:    -1.80130

END

use Test;
is @res.join("\n"), chomp $ref;
