4
False
END

use Test;
if qx/uname/ ~~ /'Linux'/ {
    is @res.join("\n"), chomp $moar-cronjob-ubuntu;
} else {
if qx/uname -a/ ~~ /'iMac'/ {
    ok (   (@res.join("\n") eq chomp $moar-cronjob-mac-pro)
        or (@res.join("\n") eq chomp $moar-cronjob-imac   )  
       )
} else {
    is @res.join("\n"), chomp $*VM ~~ /jvm/ ?? $jvm !! $moar-cronjob-mac-pro;
}
}
