#u# http://rosettacode.org/wiki/Prime_triplets
#c# 2021-04-14 <RC
#m# MOAR: OK
#j# JVM:  OK
#n# OEIS:A022004 Initial members of prime triples (p, p+2, p+6).

my @res;

constant @triples = (5, *+6 â€¦ *).map: -> \n { $_ if .all.is-prime given (n, n+2, n+6) }

my $count = @triples.first: :k, *.[0] >= 5500;

@res.push: .fmt('%4d') for @triples.head($count);

.say for @res;

my $ref = q:to/END/;
