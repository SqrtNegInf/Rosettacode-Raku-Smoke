my %results;

sub perfect-shuffle (@deck) {
    my $mid = @deck / 2;
    flat @deck[0 ..^ $mid] Z @deck[$mid .. *];
    #flat @deck[0 ..^ $mid] Z @deck[$mid ..^ @deck]; # actually slower
}

