#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Sorting_algorithms/Shell_sort
#c# 2016-05-06 <RC
#m# MOAR: OK
#j#  JVM: OK

sub shell_sort ( @a is copy ) {
    loop ( my $gap = (@a/2).round; $gap > 0; $gap = ( $gap Ã— 5 / 11 ).round ) {
        for $gap .. @a.end -> $i {
            my $temp = @a[$i];

            my $j;
            loop ( $j = $i; $j >= $gap; $j -= $gap ) {
                my $v = @a[$j - $gap];
                last if $v <= $temp;
                @a[$j] = $v;
            }

            @a[$j] = $temp;
        }
    }
    return @a;
}
my @data = 22, 7, 2, -5, 8, 4;
say 'input  = ' ~ @data;
say 'output = ' ~ @data.&shell_sort;

# above just for show, testing random values:
my @weights = (^50).map: { 100 + ( 1000.rand.Int / 10 ) };

use Test;
is @weights.sort, @weights.&shell_sort;
