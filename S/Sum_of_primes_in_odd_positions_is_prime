#!/usr/bin/env raku
#u# http://rosettacode.org/wiki/Sum_of_primes_in_odd_positions_is_prime
#c# 2021-09-01 <RC, 2021-09-xx >RC
#m# MOAR: OK
#j# JVM:  OK

my @res;

#my @indices.push: $_-1 if &is-prime and !(++$  %% 2) for 2 ..^ 1000;
my  @indices.push: $_-1 if &is-prime and   ++$ !%% 2  for 2 ..^ 1000;
my @odd = grep { ++$ !%% 2 }, grep &is-prime, 2 ..^ 1000;
my @sums = [\+] @odd;

@res.push: .fmt('%5d') for grep { .[2].is-prime }, ( @indices Z @odd Z @sums );

.say for @res;

my $ref = q:to/END/;
    1     2     2
    3     5     7
   11    31    89
   27   103   659
   35   149  1181
   67   331  5021
   91   467  9923
   95   499 10909
   99   523 11941
  119   653 17959
  143   823 26879
END

use Test;
is @res.join("\n"), chomp $ref;
