use Test;
my $ref = $*VM ~~ /jvm/ ?? $jvm !! $*IN.t ?? $moar-terminal !! $moar-cronjob;
is $result.subst(/<ws>/, '', :g), $ref.subst(/<ws>/, '', :g);
