sub sdn($n) {
    my $s = $n.Str;
    my $chars = $s.chars;
    my @a = +Â«$s.comb;
    my @b;
    for @a -> $i {
        return False if $i >= $chars;
        ++@b[$i];
    }
    @b[$_] //= 0 for ^$chars;
    @a eqv @b;
}

#.say if .&sdn for ^9999999;
