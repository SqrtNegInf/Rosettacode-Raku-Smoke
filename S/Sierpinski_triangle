#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Sierpinski_triangle
#c# 2016-09-03 <RC
#m# MOAR: OK
#j#  JVM: OK

my @res;

sub sierpinski ($n) {
    my @down  = '*';
    my $space = ' ';
    for ^$n {
        @down = |("$space$_$space" for @down), |("$_ $_" for @down);
        $space x= 2;
    }
    @down;
}

@res.push: $_ for sierpinski 4;
.say for @res;

my $ref = qq:to/END/;
               *               
              * *              
             *   *             
            * * * *            
           *       *           
          * *     * *          
         *   *   *   *         
        * * * * * * * *        
       *               *       
      * *             * *      
     *   *           *   *     
    * * * *         * * * *    
   *       *       *       *   
  * *     * *     * *     * *  
 *   *   *   *   *   *   *   * 
* * * * * * * * * * * * * * * *
END

use Test;
is @res.join("\n"), chomp $ref;
