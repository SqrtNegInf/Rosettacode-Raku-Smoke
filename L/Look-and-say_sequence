#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Look-and-say_sequence
#c# 2018-04-04 <RC
#m# MOAR: OK
#j# JVM:  OK

#In Raku it is natural to avoid explicit loops; rather we use the sequence operator to define a lazy infinite sequence. We'll print the first 15 values here.

my @res.push: $_ for ('1', *.subst(/(.)$0*/, { .chars ~ .[0] }, :g) ... *)[^15];
.say for @res;

my $ref = qq:to/END/;
1
11
21
1211
111221
312211
13112221
1113213211
31131211131221
13211311123113112211
11131221133112132113212221
3113112221232112111312211312113211
1321132132111213122112311311222113111221131221
11131221131211131231121113112221121321132132211331222113112211
311311222113111231131112132112311321322112111312211312111322212311322113212221
END

use Test;
is @res.join("\n"), chomp $ref;
