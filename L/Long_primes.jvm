#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Long_primes
#c# 2018-08-04 <RC
#m# MOAR: OK
#j# JVM:  OK
#n# drastically cut down on results calculated

# Works with: Rakudo version 2018.06

#Not very fast as the numbers get larger. 64000 takes a little over 15 minutes on my computer. ðŸ˜•

my @long-primes;

if $*VM ~~ /jvm/ {
    @long-primes = lazy (1..*).grep(*.is-prime).grep({1+(1/$_).base-repeating[1].chars == $_});
} else {
    @long-primes = lazy (1..*).grep(*.is-prime).hyper(:8degree, :8batch).grep({1+(1/$_).base-repeating[1].chars == $_});
}

my @res = "Long primes â‰¤ 500:\n"~ @long-primes[^(@long-primes.first: * > 500, :k)];

@res.push: "\nNumber of long primes â‰¤ $_: "~ +@long-primes[^(@long-primes.first: * > $_, :k)]
  for 500, 1000, 2000, 4000;
  #for 500, 1000, 2000, 4000, 8000, 16000, 32000, 64000;

.say for @res;

my $ref = qq:to/END/;
Long primes â‰¤ 500:
7 17 19 23 29 47 59 61 97 109 113 131 149 167 179 181 193 223 229 233 257 263 269 313 337 367 379 383 389 419 433 461 487 491 499

Number of long primes â‰¤ 500: 35

Number of long primes â‰¤ 1000: 60

Number of long primes â‰¤ 2000: 116

