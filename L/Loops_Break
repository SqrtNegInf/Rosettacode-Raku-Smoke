#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Loops/Break
#c# 2015-11-23 <RC
#m# MOAR: OK
#j#  JVM: OK

srand 123456;

my @res;

loop {
    @res.push: my $n = (0..19).pick;
    last if $n == 10;
    @res.push: (0..19).pick;
}

.say for @res;

my $moar = qq:to/END/;
18
2
2
11
15
13
8
5
1
1
16
19
15
18
14
3
3
15
12
9
10
END

my $jvm = qq:to/END/;
7
14
10
END

use Test;
my $ref = $*VM ~~ /jvm/ ?? $jvm !! $moar;
is @res.join("\n"), chomp $ref;
