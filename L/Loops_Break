10
END

use Test;
if $*KERNEL eq 'linux' {
is @res.join("\n"), chomp $linux-cronjob
} else {
is @res.join("\n"), chomp $*VM ~~ /jvm/ ?? $jvm !! $*IN.t ?? $moar-terminal !! $moar-cronjob
}
