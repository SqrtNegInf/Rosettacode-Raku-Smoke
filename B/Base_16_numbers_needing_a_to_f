#!/usr/bin/env raku
#u# https://rosettacode.org/wiki/Base_16_numbers_needing_a_to_f
#c# 2023-04-19 <RC
#m# MOAR: OK
#j# JVM:  OK
#n# Yet another poorly specced, poorly named, trivial task; 'Base 16' is not hexadecimal. Hexadecimal is an implementation of base 16. 

say my $result = display :20cols, :fmt('%3d'), (^501).grep( { so any |.map: { .polymod(16 xx *) »>» 9 } } );

sub display ($list, :$cols = 10, :$fmt = '%6d', :$title = "{+$list} matching:\n" )   {
    cache $list;
    $title ~ $list.batch($cols)».fmt($fmt).join: "\n"
}

my $ref = q:to/END/;
