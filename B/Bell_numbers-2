#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Bell_numbers
#c# 2019-07-14 <RC
#m# MOAR: OK
#j# JVM:  OK
#n# OEIS:A000110 Bell or exponential numbers

my @res;

# via Recurrence relation

sub binomial { [×] ($^n … 0) Z/ 1 .. $^p }

my @bell = 1, -> *@s { [+] @s »×« @s.keys.map: { binomial(@s-1, $_) }  } … *;

@res.push: $_ for @bell[^15], @bell[50 - 1];

.say for @res;

my $ref = q:to/END/;
1 1 2 5 15 52 203 877 4140 21147 115975 678570 4213597 27644437 190899322
10726137154573358400342215518590002633917247281
END

use Test;
is @res.join("\n"), chomp $ref;
