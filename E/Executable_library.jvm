#j# JVM:  OK
#n# uses module 'Hailstone.pm'

use lib 'lib';
use Hailstone;

my %score;
(1 .. 1000).map: { %score{hailstone($_).elems}++ };

say my $result = "Most common length is {.key}, occurring {.value} times." given max :by(*.value), %score;

use Test;
is $result, 'Most common length is 29, occurring 30 times.';
