my @res;

my @primes = (3..60).grep: &is-prime;

#print 'First four Giuga numbers: ';

@res.push: sort flat (2..4).map: -> $c {
    @primes.combinations($c).map: {
        my $n = [Ã—] 2,|$_;
        $n if all .map: { ($n/$_ - 1) %% $_ };
    }
}

.say for @res;

use Test;
is @res.join(' '), '30 858 1722 66198'
