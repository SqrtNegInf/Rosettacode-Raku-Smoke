#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Gamma_function
#c# 2018-03-12 <RC
#m# MOAR: OK
#j# JVM:  OK

sub Γ(\z) {
    constant g = 9;
    z < .5 ?? pi/ sin(pi × z) / Γ(1 - z) !!
    sqrt(2×pi) ×
    (z + g - 1/2)**(z - 1/2) ×
    exp(-(z + g - 1/2)) ×
    [+] <
        1.000000000000000174663
     5716.400188274341379136
   -14815.30426768413909044
    14291.49277657478554025
    -6348.160217641458813289
     1301.608286058321874105
     -108.1767053514369634679
        2.605696505611755827729
       -0.7423452510201416151527e-2
        0.5384136432509564062961e-7
       -0.4023533141268236372067e-8
    > Z× 1, |map 1/(z + *), 0..*
}

my @res.push: Γ($_) for 1/3, 2/3 ... 10/3;
.say for @res;

my $ref = qq:to/END/;
2.6789385347077475
1.3541179394264005
0.9999999999999997
0.8929795115692479
0.9027452929509348
1.0000000000000007
1.1906393487589975
1.5045754882515547
1.999999999999995
2.7781584804376678
END

use Test;
is @res.join("\n"), chomp $ref;
