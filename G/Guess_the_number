#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Guess_the_number
#c# 2018-03-21 <RC
#m# MOAR: OK
#j# JVM:  OK
#=# RC pipe: 1\n2\n3
#n# always win if you guess every number...

srand 123456;

my $number = 3; # (1..10).pick;
repeat {} until prompt("Guess a number: ") == $number;
say "Guessed right!";

use Test;
is $number, 3;
