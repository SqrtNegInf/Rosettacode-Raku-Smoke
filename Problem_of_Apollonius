#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/Problem_of_Apollonius
#c# 2015-11-02 <RC
#m# MOAR: OK
#j#  JVM: BROKEN
#n# JVM fails on '\' of Unicode char, but downgrading Unicode brings up another problem 

#`{
This program is written mostly in the "sigilless" style for several
reasons. First, sigils tend to imply variables, and these sigilless symbols
are not variables, but readonly bindings to values that are calculated only
once, so leaving off the sigil emphasizes the fact that they are not
variables, but merely named intermediate results.  Second, it looks more
like the original mathematical formulas to do it this way (which is also
why we define a postfix:<Â²> for squaring values).  Third, together with the
use of Unicode, we are emphasizing the social contract between the writer
and the reader, which has a clause in it that indicates code is read much
more often than it is written, therefore the writer is obligated to undergo
vicarious suffering on behalf of the reader to make things clear. If the
reader doesn't understand, it's the writer's fault, in other words. Or in
other other words, figure out how to type those Unicode characters, even if
it's hard. And you should type them whenever it makes things clearer to the
reader.  Finally, writing in an SSA style tends to help the optimizer.
}

class Circle {
   has $.x;
   has $.y;
   has $.r;
   method gist { "circle($!x, $!y, $!r)" }
}

sub circle($x,$y,$r) { Circle.new: :$x, :$y, :$r }

sub postfix:<Â²>($x) { $x * $x }

sub solve-Apollonius([\c1, \c2, \c3], [\s1, \s2, \s3]) {
    my \ğ‘£11 = 2 * c2.x - 2 * c1.x;
    my \ğ‘£12 = 2 * c2.y - 2 * c1.y;
    my \ğ‘£13 = c1.xÂ² - c2.xÂ² + c1.yÂ² - c2.yÂ² - c1.rÂ² + c2.rÂ²;
    my \ğ‘£14 = 2 * s2 * c2.r - 2 * s1 * c1.r;

    my \ğ‘£21 = 2 * c3.x - 2 * c2.x;
    my \ğ‘£22 = 2 * c3.y - 2 * c2.y;
    my \ğ‘£23 = c2.xÂ² - c3.xÂ² + c2.yÂ² - c3.yÂ² - c2.rÂ² + c3.rÂ²;
    my \ğ‘£24 = 2 * s3 * c3.r - 2 * s2 * c2.r;

    my \ğ‘¤12 = ğ‘£12 / ğ‘£11;
    my \ğ‘¤13 = ğ‘£13 / ğ‘£11;
    my \ğ‘¤14 = ğ‘£14 / ğ‘£11;

    my \ğ‘¤22 = ğ‘£22 / ğ‘£21 - ğ‘¤12;
    my \ğ‘¤23 = ğ‘£23 / ğ‘£21 - ğ‘¤13;
    my \ğ‘¤24 = ğ‘£24 / ğ‘£21 - ğ‘¤14;

    my \ğ‘ƒ = -ğ‘¤23 / ğ‘¤22;
    my \ğ‘„ = ğ‘¤24 / ğ‘¤22;
    my \ğ‘€ = -ğ‘¤12 * ğ‘ƒ - ğ‘¤13;
    my \ğ‘ = ğ‘¤14 - ğ‘¤12 * ğ‘„;

    my \ğ‘ = ğ‘Â² + ğ‘„Â² - 1;
    my \ğ‘ = 2 * ğ‘€ * ğ‘ - 2 * ğ‘ * c1.x + 2 * ğ‘ƒ * ğ‘„ - 2 * ğ‘„ * c1.y + 2 * s1 * c1.r;
    my \ğ‘ = c1.xÂ² + ğ‘€Â² - 2 * ğ‘€ * c1.x + ğ‘ƒÂ² + c1.yÂ² - 2 * ğ‘ƒ * c1.y - c1.rÂ²;

    my \ğ· = ğ‘Â² - 4 * ğ‘ * ğ‘;
    my \rs = (-ğ‘ - sqrt ğ·) / (2 * ğ‘);

    my \xs = ğ‘€ + ğ‘ * rs;
    my \ys = ğ‘ƒ + ğ‘„ * rs;

    circle(xs, ys, rs);
}

sub MAIN {

    my @c = circle(0, 0, 1), circle(4, 0, 1), circle(2, 4, 2);
    my $out1 = solve-Apollonius @c, <1 1 1>;
    my $out2 = solve-Apollonius @c, <-1 -1 -1>;

    use Test;
    is $out1.gist, 'circle(2, 2.1, 3.9)';
    is $out2.gist, 'circle(2, 0.8333333333333333, 1.1666666666666667)';
}
