#!/usr/bin/env perl6
#u# http://rosettacode.org/wiki/One_of_n_lines_in_a_file
#c# 2018-03-21 <RC
#m# MOAR: OK
#j# JVM:  OK

srand 123456;

sub one_of_n($n) {
    my $choice;
    $choice = $_ if .rand < 1 for 1 .. $n;
    $choice - 1;
}

sub one_of_n_test($n = 10, $trials = 10_000) {
    my @bins;
    @bins[one_of_n($n)]++ for ^$trials;
    @bins;
}

put my $result = one_of_n_test();

my $moar-terminal = '1021 1006 1019 966 1027 1020 1002 1021 948 970';
my $moar-cronjob  = '990 998 994 1011 1002 966 1074 962 999 1004';
my $jvm           = '1017 971 994 988 978 1059 950 960 1043 1040';

use Test;
is $result, chomp $*VM ~~ /jvm/ ?? $jvm !! $*IN.t ?? $moar-terminal !! $moar-cronjob;
