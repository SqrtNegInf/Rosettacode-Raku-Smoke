my @res;

sub dif(@array [$, *@tail]) { @tail Z- @array } 

sub difn($array, $n) { ($array, &dif ... 4Ã—$n)[$n] }

my @a = <90 47 58 29 22 32 55 5 55 73>;

for ^@a.elems -> $n { 
    @res.push: difn(@a, $n+1);
}

.say for @res;

my $ref = qq:to/END/;
