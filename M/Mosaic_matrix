my @res;

sub checker ($n) { (^$n).map: { 1 xx $n ZÃ— (flat ($_ %% 2, $_ % 2) xx *) } }

@res.push: $_ for checker 7;
@res.push: '';
@res.push: $_ for checker 8;

.say for @res;

my $ref = q:to/END/;
1 0 1 0 1 0 1
