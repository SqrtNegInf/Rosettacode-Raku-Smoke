#!/usr/local/bin/perl
## download a RC page, extract Raku entry
#c# 2015-10-22 2015-11-03 2016-08-01 2018-03-30 2018-03-31 2018-04-05 2020-03-13

use utf8;
binmode STDOUT, ":utf8";

use Modern::Perl;

my $w = join '_', @ARGV;
$w =~ s#^.*wiki/##;
$w =~ s/#.*//;
$w =~ s/\*$//;
$w =~ s#^\.\./##;
$w =~ s#\s#_#g;

(my $f = $w) =~ s#/#_#g;
$f =~ s#'#_#g;
$f =~ s#\$#_#g;

if (-e "$f") {
for my $i (reverse 1..8) {
    my $j = $i + 1;
    system "mv $f.$i $f.$j" if -e "$f.$i";
}
system "mv $f $f.1" 
}

$w =~ s/'/\\'/g;

my $raku = `curl -s -o - 'http://rosettacode.org/wiki/$w' | tee _download.html | perl -0 -npe 's/^.*id="Raku".(.*?)<h2>.*/\$1/s; s/&#160;/ /sg;s#<br */>#<br/>\\n#sg' | strip-html - `;
die "No text!" if $raku =~ /currently no text/i;

$raku =~ s/^Raku\[edit\]//;
$raku =~ s/Works with/# Works with/ms;
$raku =~ s/\xA0//g;
$raku =~ s/PerlÃ‚/Perl /g;
$raku =~ s/\n\s+\n/\n\n/msg;

my $ymd = `date +%Y-%m-%d`; chomp $ymd;
my $ym  = `date +%Y.%m`; chomp $ym;

open F, ">$f";
print F <<EOP;
#!/usr/bin/env raku
#u# http://rosettacode.org/wiki/$w
#c# $ymd <RC
#m# MOAR: BROKEN OK
#j# JVM:  BROKEN OK
#  {{Works with|rakudo|$ym}} or {{broken|Raku}}  

my \@res;

$raku

END

.say for \@res;
my \$ref = q:to/END/;

use Test;
#my \$ref = \$*VM ~~ /jvm/ ?? \$jvm !! \$moar;
#is \@res.join("\\n"), chomp \$ref;
EOP

system "chmod +x $f";
