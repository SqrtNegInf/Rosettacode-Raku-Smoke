my @nums = <10 -1 1 2 3 4 4.3 4.305 4.303 4.302 4.301>;

my @res;
for @nums.reverse -> $n {
    my $r = $n.abs.sqrt + 5 Ã— $n ** 3;
    @res.push: "$n { $r > 400?? 'Urk!'!! $r }";
}
.say for @res;

my $ref = qq:to/END/;
4.301 399.8862997477268
4.302 Urk!
4.303 Urk!
4.305 Urk!
4.3 399.6086441353328
4 322
